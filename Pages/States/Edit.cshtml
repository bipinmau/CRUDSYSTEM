@page
@model DRDOAssignment.Pages.States.EditModel
@{
    ViewData["Title"] = "Edit State";
}

<h1>Edit State</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="State.Id" />
            <div class="form-group">
                <label asp-for="State.Name" class="control-label"></label>
                <input asp-for="State.Name" class="form-control" />
                <span asp-validation-for="State.Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
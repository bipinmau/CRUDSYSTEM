@page
@model DRDOAssignment.Pages.Genders.DeleteModel
@{
    ViewData["Title"] = "Delete Gender";
}

<div class="container">
    <h1>Delete Gender</h1>
    <hr />
    <h3>Are you sure you want to delete this gender?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Gender.Name</dd>
        </dl>
        <form method="post">
            <input type="hidden" asp-for="Gender.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-page="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div> 
@page
@model DRDOAssignment.Pages.Districts.DeleteModel
@{
    ViewData["Title"] = "Delete District";
}

<div class="container">
    <h1>Delete District</h1>
    <hr />
    <h3>Are you sure you want to delete this district?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.District.Name</dd>
            <dt class="col-sm-2">State</dt>
            <dd class="col-sm-10">@Model.District.State?.Name</dd>
        </dl>
        <form method="post">
            <input type="hidden" asp-for="District.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-page="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div> 